@using Macone.Models.Entities;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/User/Views/Shared/Layouts/_Layout_Home.cshtml";
    ViewData["Title"] = "Trang chủ";
}
@model List<Product>
<div class="row featured__filter" id="home-products"></div>

@section Scripts {
    <script>
        $(document).ready(function (){
            function loadProducts(categoryId = ''){
                $.ajax({
                    url: '/api/user/ProductApi/Home' + (categoryId ? '?categoryId=' + categoryId : ''),
                    type: 'GET',
                    success: function(data){
                        let html = '';
                        data.forEach(p => {
                            html += `
                                <div class="col-lg-3 col-md-4 col-sm-6">
                                    <div class="featured__item">
                                        <div class="featured__item__pic set-bg"
                                              style="background-image: url('../../../../admin-assets/img/products/${p.image}');">
                                            <ul class="featured__item__pic__hover">
                                                <li><a href="#"> <i class="fa fa-heart"></i></a></li>
                                                <li><a href="#"> <i class="fa fa-retweet"></i> </a></li>
                                                <li><a href="#"> <i class="fa fa-shopping-cart"></i> </a></li>
                                            </ul>
                                        </div>
                                        <div class="featured__item__text">
                                            <h6><a href="/User/ShopDetails/${p.id}">${p.name}</a></h6>
                                            <h5>${p.price.toLocaleString('vi-VN')}₫</h5>
                                        </div>
                                    </div>
                                </div>`;
                        });
                        $('#home-products').html(html);
                    },
                    error: function() {
                        $('#home-products').html('<p class="text-danger">Không thể tải sản phẩm!</p>');
                    }
                });
            };

            loadProducts();

            $('.home-products').click(function () {
                const id = $(this).data('id');
                $('.home-products').removeClass('active');
                $(this).addClass('active');
                loadProducts(id);
            });
        });
    </script>
}


