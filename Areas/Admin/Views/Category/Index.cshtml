@{
    Layout = "~/Areas/Admin/Views/Shared/Layouts/_Layout_Base.cshtml";
    ViewData["Title"] = "Quản lí loại sản phẩm";
}


<h1>Category Management (AJAX CRUD)</h1>

<!-- Button Add -->
<button class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#createModal">
    + Add Category
</button>

<!-- Table -->
<table class="table table-striped table-hover" id="category-table">
    <thead>
        <tr>
            <th>CategoryID</th>
            <th>CategoryName</th>
            <th>Created At</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Create -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5>Add Category</h5></div>
            <div class="modal-body">
                <form id="createForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input name="Name" class="form-control" placeholder="Enter category name" required>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5>Edit Category</h5></div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editId">
                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input name="Name" id="editName" class="form-control" placeholder="Enter category name" required>
                    </div>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadProducts();

            // Load list
            function loadProducts() {
                $.get('/api/Admin/CategoryApi', function (data) {
                    let html = '';
                    $.each(data, function (i, c) {
                        html += `
                            <tr>
                                <td>${c.id}</td>
                                <td>${c.name}</td>
                                <td>${c.createdAt}</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary edit-btn" data-id="${c.id}">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger delete-btn" data-id="${c.id}">Delete</button>
                                </td>
                            </tr>`;
                    });
                    $('#category-table tbody').html(html);
                });
            }


            // Create
            $('#createForm').submit(function (e) {
                e.preventDefault();
                const formData = new FormData(this);
                $.ajax({
                    url: '/api/Admin/CategoryApi',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (res) {
                        alert(res.message);
                        $('#createModal').modal('hide');
                        $('#createForm')[0].reset();
                        loadProducts();
                    }
                });
            });

            // Edit - load data
            $(document).on('click', '.edit-btn', function () {
                const id = $(this).data('id');
                $.get('/api/Admin/CategoryApi/' + id, function (p) {
                    $('#editId').val(p.id);
                    $('#editName').val(p.name);
                    $('#editModal').modal('show');
                });
            });

            // Edit - submit
            $('#editForm').submit(function (e) {
                e.preventDefault();
                const id = $('#editId').val();
                const product = {
                    id: parseInt(id),
                    name: $('#editName').val(),
                };
                $.ajax({
                    url: '/api/Admin/CategoryApi/' + id,
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(product),
                    success: function (res) {
                        alert(res.message);
                        $('#editModal').modal('hide');
                        loadProducts();
                    },
                    error: function (xhr) {
                        console.log(xhr);
                        alert('Error: ' + xhr.status + ' ' + xhr.statusText);
                    }
                });
            });

            // Delete
            $(document).on('click', '.delete-btn', function () {
                const id = $(this).data('id');
                if (confirm('Are you sure to delete?')) {
                    $.ajax({
                        url: '/api/Admin/CategoryApi/' + id,
                        type: 'DELETE',
                        success: function (res) {
                            alert(res.message);
                            loadProducts();
                        },
                        error: function (xhr) {
                            console.log(xhr);
                            alert('Error: ' + xhr.status + ' ' + xhr.statusText);
                        }
                    });
                }
            });
        });
    </script>
}

